[{elvis,
  [{config,
    [#{dirs => ["apps/*/src/**"],
       filter => "*.erl",
       ruleset => erl_files,
       rules =>
           [{elvis_style, operator_spaces, disable},
            {elvis_style, invalid_dynamic_call, disable},
            {elvis_style, dont_repeat_yourself, disable},
            {elvis_style, no_throw, disable}]},
     #{dirs => ["."],
       filter => "rebar.config",
       ruleset => rebar_config},
     #{dirs => ["."],
       filter => "elvis.config",
       ruleset => elvis_config}]}]}].

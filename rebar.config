{minimum_otp_vsn, "27"}.

{erl_opts, [debug_info]}.

{apps, [event_sourcing_xp, event_sourcing_core]}.

{project_plugins, [
    {rebar3_lint, "~> 3.2.6"},
    {erlfmt, "~> 1.6.0"},
    {rebar3_ex_doc, "~> 0.2.25"}
]}.

{relx, [
    {release, {event_sourcing_xp, "1.1.0"}, [event_sourcing_core, sasl, mnesia]},
    {mode, dev},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},
    {dev_mode, false},
    {include_erts, true},
    {extended_start_script, true}
]}.

%% the .src form of the configuration files do
%% not require setting RELX_REPLACE_OS_VARS
%% {sys_config_src, "./config/sys.config.src"},
%% {vm_args_src, "./config/vm.args.src"}

{profiles,
    %% prod is the default mode when prod
    %% profile is used, so does not have
    %% to be explicitly included like this
    [{prod, [{relx, [{mode, prod}]}]}]}.

%% use minimal mode to exclude ERTS
%% {mode, minimal}

%% == Format ==
{erlfmt, [
    write,
    {files, ["apps/**/*.config", "apps/**/*{.erl,.src}", "*.config", "config/*.config"]}
]}.

%% == Dialyzer ==
{dialyzer, [
    {warnings, [unmatched_returns, error_handling, underspecs]},
    {get_warnings, true},
    {plt_apps, all_deps},
    {plt_extra_apps, [mnesia, uuid, quickrand]},
    {plt_location, local},
    {base_plt_location, global}
]}.

%% == ex_doc ==
{ex_doc, [
    {extras, ["README.md", "LICENSE"]},
    {main, "README.md"},
    {source_url, "https://github.com/ccamel/erlang-event-sourcing-xp"},
    {with_mermaid, true}
]}.

%% == shell ==
{shell, [
    {apps, [event_sourcing_core]},
    {paths, ["apps/event_sourcing_core/test"]}
]}.
